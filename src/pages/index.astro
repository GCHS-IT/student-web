---
import Layout from "../layouts/Layout.astro";
---

<Layout title="GCHS Student Sites">
	<main class="h-full flex flex-col">
		<header
			class="text-3xl md:text-5xl lg:text-7xl text-center pt-4 text-green-600 font-warhawk"
		>
			GCHS Student Sites
		</header>
		<div class="inline-flex self-center items-center h-full">
			<div
				class="md:w-[75vw] h-[75vh] w-screen border-4 border-green-600 inline-flex items-center justify-center font-warhawk text-2xl"
			>
				<p>Student Files Here</p>
				<a
					href="/home/pi/i-drive/Public/StudentWeb/hderifield"
					target="_blank">Hayden Derifield</a
